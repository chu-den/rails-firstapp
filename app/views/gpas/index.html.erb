<h1>GPAポイント一覧</h1>

<span>単位数</span>
<%= @cnt %>単位
<span>合計GPAポイント</span>
<%= @score %>点

<br>

<span>平均GPAポイント</span>
<%= @avarage %>点

<br>

<% if @avarage >= 3.3 %>
	<span>学長褒章</span>
<% end %>

<br>

<table>
	<thead>
		<tr>
			<th>授業名</th>
			<th>成績</th>
			<th colspan="3"><th>
		</tr>
	</thead>

	<tbody>
		<% @gpas.each do |gpa| %>
			<tr>
				<td><%= gpa.classname %></td>
				<td><%= gpa.evaluation %></td>
				<td><%= link_to '削除', gpa_path(gpa), method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to '追加', new_gpa_path %>